<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.jonsch.bingwallpaper</string>
    
    <!-- Define your command to run here -->
    <key>ProgramArguments</key>
    <array>
        <string>##path-to-your-bing-wallpaper.sh-file##</string>
    </array>
    
    <!-- This will run the task every day at 6 AM, for example -->
    <key>StartCalendarInterval</key>
    <dict>
        <key>Hour</key>
        <integer>6</integer>
        <key>Minute</key>
        <integer>0</integer>
    </dict>
    
    <!-- Run at the next opportunity if the scheduled time was missed -->
    <key>Persistent</key>
    <true/>
    
    <!-- Run as soon as the system starts if the time was missed -->
    <key>RunAtLoad</key>
    <true/>
</dict>
</plist>

